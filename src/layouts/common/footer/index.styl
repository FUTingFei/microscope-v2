.footer
  width 100%
  min-height 258px
  background-color #262c38
  font-size 14px
  a
    color white
  .intro, .otherProduct
    position relative
    &::after
      position absolute
      right 0
      top 73px
      width 1px
      height 80px
      background-color #50546a
      content ""
  .footTitle
    font-size 18px
    height 20px
    display inline-block
    padding-right 8px
    &::after
      display block
      width 100%
      height 2px
      background-color #5b8ee6
      margin-top 3px
      content ""
