.customHeader
  width 100%
  height 80px
  background #FFFFFF
  box-shadow 0 5px 4px 0 rgba(170,170,170,0.07)
  position sticky
  top 0
  z-index 888
  .networkName
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    margin-left 5px
    font-size 16px
    line-height 16px
    height 20px
    color #47484a
    text-align right
  .networkOpen
    width 465px
    min-height 200px
    box-shadow 0 2px 6px 1px rgba(188, 193, 199, 0.71)
    background-color #ffffff
    border-radius 5px 5px
    position absolute
    top 50px
    right 0
    padding 30px 20px
    .networkSwitchButton
      margin-left 15px
      font-size 14px
      color white
      width 88px
      height 100%
      border-radius 4px
      background-image linear-gradient(to left, #4eadf1, #6a96f0)
  .menu
    font-family PingFangSC-Regular
    font-size 16px
    color #47484A
    letter-spacing 0
    text-align center
    margin-left 40px
    display inline-block
  .rc-menu
    z-index 900
    padding 0px
    width 100%
    border none
    box-shadow none
  .rc-menu-submenu
    box-shadow none
  .rc-menu-submenu-title
    padding 0px !important
    color white
    height 34px
    text-align center
    color #332b2b
    width 100px
    background-color white
  .rc-menu-submenu-arrow
    padding-top 5px
