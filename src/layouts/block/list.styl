.blockList
  background-color #fbfbfb
  .blockListBody
    border-radius 6px
    background-color white
    box-shadow: 0 0 20px 0 rgba(170, 170, 170, 0.2)
    .queryButton
      font-size 14px
      line-height 36px
      color white
      width 110px
      height 36px
      display inline-block
      text-align center
      border-radius 6px
      background-image linear-gradient(to left, #4eadf1, #6a96f0)

    .blockNumberTd,.blockHashTd
      color #5b8ee6

    .blockTimestampTd, .blockTransactionCountTd,.blockQuotaUsedTd
      color #6f747a

    .blockHashTd,.blockTimestampTd,.blockNumberTd,.blockQuotaUsedTd
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
